{
    "manifest_version": 3,
    "name": "Noviceâ€“Expert+",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "description": "This extension logs the steps a user takes to perform a task and estimates the time an expert would take to complete each step.",
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },    
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    }, 
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contentScriptEntry.js"],
            "match_about_blank": true,
            "all_frames": true,
            "exclude_matches": [
                "https://www.figma.com/proto/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self'"
    },
    "host_permissions":[
        "<all_urls>"
    ],
    "options_page": "options.html",
    "permissions": [
        "downloads",
        "notifications",
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources":[ "js/*", "js/contentScriptMain.js"],
            "matches": ["<all_urls>"]
        }
    ]
}