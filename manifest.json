{
    "name": "Cogtool+",
    "version": "1.0",  
    "icons": {
        "32": "icons/icon_32.png"
    },
    "description": "This extension logs the steps a user takes to perform a task and estimates the time an expert would take to complete each step.", 
    "manifest_version": 3,
    "options_page": "regression.html",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self'"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contentScriptEntry.js"],
            "match_about_blank": true,
            "all_frames": true,
            "exclude_matches": [
                "https://www.figma.com/proto/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources":[ "js/*", "js/contentScriptMain.js"],
            "matches": ["<all_urls>"]

        }
    ],
    "permissions": [
        "downloads",
        "storage",
        "notifications"
    ],
    "host_permissions":[
        "<all_urls>"
    ]
}
